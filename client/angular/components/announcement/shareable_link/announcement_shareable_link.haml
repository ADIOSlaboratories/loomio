.announcement-shareable-link{ng-if: "model.constructor.shareable"}
  .lmo-md-action
    %md-button.md-accent{translate: "announcement.form.get_shareable_link", ng-click: "model.makeShareable()", ng-if: "!model.anyoneCanParticipate"}
    .announcement-shareable-link__input{ng-if: "model.anyoneCanParticipate"}
      %h3.lmo-h3{translate: "invitation_form.shareable_link"}
      .announcement-shareable-link__content.lmo-flex__center.lmo-flex--row
        %md-input-container.lmo-flex__grow.md-no-errors
          %input{value: "{{model.shareableLink()}}", disabled: "true"}
        %md-button.md-accent{title: "{{ 'common.copy' | translate }}", clipboard: "true", text: "model.shareableLink()", on-copied: "copied()"}
          %span{translate: "common.copy"}
        %md-button.md-button--tiny.md-warn{ng-if: "!model.alwaysShareable", translate: "authorized_apps_page.revoke", ng-click: "model.revokeShareable()"}
  .md-caption.announcement-shareable-link__helptext{ng-if: "model.anyoneCanParticipate", translate: "announcement.form.shareable_link_helptext"}
